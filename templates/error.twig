{% extends 'base.twig' %}

{% block title %}Error - {{ app_name }}{% endblock %}

{% block content %}
<div class="tabs">
    <a href="/" class="tab">Search</a>
    <a href="/library" class="tab">Library <span style="opacity: 0.6;">({{ library_stats.track_count }})</span></a>
    <a href="/queue" class="tab">Queue <span style="opacity: 0.6;">({{ queue_stats.queued + queue_stats.processing }})</span></a>
    <a href="/import" class="tab">Import</a>
    <a href="/watched" class="tab">Watched</a>
    <a href="/settings" class="tab">Settings</a>
</div>

<div class="settings-section" style="text-align: center; padding: 40px;">
    <div style="margin-bottom: 16px;"><span class="icon icon-warning" style="width:48px;height:48px;"></span></div>
    <h2 style="margin-bottom: 16px;">{{ message|default('Something went wrong') }}</h2>
    <a href="/" class="btn btn-primary">Go Home</a>
</div>
{% endblock %}
