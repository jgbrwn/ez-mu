<div class="validation-result" style="padding: 16px; background: var(--bg-tertiary); border-radius: 8px; border: 1px solid var(--border);">
    <div style="display: flex; align-items: center; gap: 12px; color: var(--accent);">
        <span style="font-size: 24px;">âœ“</span>
        <div>
            <div style="font-weight: 600;">Issues Fixed</div>
            <div style="font-size: 13px; color: var(--text-secondary);">
                {% set has_fixes = result.library_removed > 0 or result.jobs_marked_failed > 0 or (result.watched_tracks_reset|default(0)) > 0 %}
                {% if result.library_removed > 0 %}Removed {{ result.library_removed }} orphaned library entry(s). {% endif %}
                {% if result.jobs_marked_failed > 0 %}Marked {{ result.jobs_marked_failed }} job(s) as failed. {% endif %}
                {% if (result.watched_tracks_reset|default(0)) > 0 %}Reset {{ result.watched_tracks_reset }} watched playlist track(s) for re-download.{% endif %}
                {% if not has_fixes %}No issues found.{% endif %}
            </div>
        </div>
    </div>
    
    <button hx-post="/settings/validate-library"
            hx-target=".validation-result"
            hx-swap="outerHTML"
            style="margin-top: 12px; background: var(--bg-secondary); color: var(--text-primary); border: 1px solid var(--border); padding: 8px 16px; border-radius: 6px; cursor: pointer;">
        Validate Again
    </button>
</div>
