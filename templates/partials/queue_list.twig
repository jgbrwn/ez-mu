{# Main queue list content #}
{% if jobs is empty %}
<div class="empty-state">
    <div class="empty-state-icon"><span class="icon icon-download" style="width:48px;height:48px;opacity:0.3;"></span></div>
    <p>No jobs in queue</p>
</div>
{% else %}
{% for job in jobs %}
{% include 'partials/queue_item.twig' with {'job': job} %}
{% endfor %}
{% endif %}

{# Out-of-band updates for stats - use outerHTML to replace entire element #}
{% if stats is defined %}
<h2 id="queue-stats" hx-swap-oob="outerHTML" style="font-size: 14px; font-weight: 600; color: var(--text-secondary);">
    {{ stats.queued }} queued • {{ stats.processing }} processing • {{ stats.completed }} completed • {{ stats.failed }} failed
</h2>
<span id="queue-badge" hx-swap-oob="outerHTML" style="opacity: 0.6;">({{ stats.queued + stats.processing }})</span>
{% endif %}
