<div class="job-item">
    {# Status icon #}
    <div class="job-status-icon {{ job.status }}" title="{{ job.status|capitalize }}">
        {% if job.status == 'queued' %}
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
        {% elseif job.status == 'processing' %}
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z"/></svg>
        {% elseif job.status == 'completed' %}
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/></svg>
        {% elseif job.status == 'completed_with_errors' %}
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/></svg>
        {% elseif job.status == 'failed' %}
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.47 2 2 6.47 2 12s4.47 10 10 10 10-4.47 10-10S17.53 2 12 2zm5 13.59L15.59 17 12 13.41 8.41 17 7 15.59 10.59 12 7 8.41 8.41 7 12 10.59 15.59 7 17 8.41 13.41 12 17 15.59z"/></svg>
        {% endif %}
    </div>
    
    {# Job info #}
    <div class="job-info">
        <div class="job-title">{{ job.title }}</div>
        <div class="job-meta">
            {{ job.artist }}
            {% if job.source %}
            • <span class="source-badge {{ job.source }}" style="font-size: 9px;">{{ job.source|upper }}</span>
            {% endif %}
        </div>
        {% if job.error %}
        <div class="job-error">{{ job.error }}</div>
        {% endif %}
        {% if job.status == 'completed' and job.codec %}
        <div style="font-size: 11px; color: var(--text-secondary); margin-top: 4px;">
            {{ job.codec|upper }} • {{ job.bitrate }} kbps
        </div>
        {% endif %}
        {% if job.status == 'processing' %}
        <div style="font-size: 11px; color: var(--warning); margin-top: 4px;">
            ⚡ Downloading...
        </div>
        {% endif %}
    </div>
    
    {# Actions #}
    <div class="job-actions">
        {% if job.status == 'completed' %}
        {# Play button for completed jobs #}
        <button 
            class="job-action-btn play"
            onclick="playTrackFromJob('{{ job.video_id }}')"
            title="Play"
        >
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
        </button>
        {% endif %}
        
        {% if job.status == 'failed' %}
        {# Retry button for failed jobs #}
        <button 
            class="job-action-btn retry"
            hx-post="/queue/{{ job.id }}/retry"
            hx-target="closest .job-item"
            hx-swap="outerHTML"
            title="Retry"
        >
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"/></svg>
        </button>
        {% endif %}
        
        {# Delete button for all jobs #}
        <button 
            class="job-action-btn delete"
            hx-delete="/queue/{{ job.id }}"
            hx-target="closest .job-item"
            hx-swap="outerHTML"
            title="Remove"
        >
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>
        </button>
    </div>
</div>
