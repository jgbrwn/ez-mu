<!DOCTYPE html>
<html lang="en" data-theme="{{ settings.theme|default('dark') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="csrf-token" content="{{ csrf_token }}">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/style.css">
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body hx-headers='{"X-CSRF-Token": "{{ csrf_token }}"}'>
    <div class="container">
        <header>
            <div class="logo"><span class="icon icon-music" style="width:20px;height:20px;"></span></div>
            <h1>{{ app_name }}</h1>
            <div style="margin-left: auto; display: flex; align-items: center; gap: 12px;">
                <button id="themeToggle" class="theme-toggle-btn" title="Toggle theme"><span class="icon icon-moon"></span></button>
                {% if auth_enabled %}
                <a href="/logout" style="background: none; border: 1px solid var(--border); border-radius: 6px; padding: 4px 8px; font-size: 12px; color: var(--text-secondary); text-decoration: none;" title="Sign out">Logout</a>
                {% endif %}
                <span style="font-size: 11px; color: var(--text-secondary);">v{{ version }}</span>
            </div>
        </header>

        {% block content %}{% endblock %}
    </div>

    <div id="toast" class="toast"></div>

    <script>
        // Theme toggle
        document.getElementById('themeToggle').addEventListener('click', function() {
            const html = document.documentElement;
            const current = html.getAttribute('data-theme');
            const next = current === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-theme', next);
            this.querySelector('.icon').className = next === 'dark' ? 'icon icon-moon' : 'icon icon-sun';
            localStorage.setItem('theme', next);
        });

        // Restore theme
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            document.documentElement.setAttribute('data-theme', savedTheme);
            document.getElementById('themeToggle').querySelector('.icon').className = savedTheme === 'dark' ? 'icon icon-moon' : 'icon icon-sun';
        }

        // Toast helper
        function showToast(message, isError = false) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast show' + (isError ? ' error' : '');
            setTimeout(() => toast.className = 'toast', 3000);
        }

        // HTMX events
        document.body.addEventListener('htmx:afterRequest', function(evt) {
            if (evt.detail.failed) {
                showToast('Request failed', true);
            }
        });
    </script>
    {% block scripts %}{% endblock %}
</body>
</html>
