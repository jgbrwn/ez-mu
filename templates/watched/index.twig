{% extends 'base.twig' %}

{% block title %}Watched Playlists - {{ app_name }}{% endblock %}

{% block content %}
<div class="tabs">
    <a href="/" class="tab">Search</a>
    <a href="/library" class="tab">Library</a>
    <a href="/queue" class="tab">Queue</a>
    <a href="/import" class="tab">Import</a>
    <a href="/watched" class="tab active">Watched</a>
    <a href="/settings" class="tab">Settings</a>
</div>

<div class="settings-section">
    <div class="settings-section-title">Add Watched Playlist</div>
    <p class="settings-description" style="margin-bottom: 16px;">
        Monitor a playlist for new tracks and automatically download them.<br>
        Supported platforms: Spotify, YouTube, Amazon Music, Tidal.
    </p>
    
    <form hx-post="/watched/add" hx-target="#add-result" hx-indicator="#add-spinner">
        <div class="form-group" style="margin-bottom: 16px;">
            <label style="display: block; margin-bottom: 6px; font-size: 13px; color: var(--text-secondary);">Playlist URL</label>
            <input 
                type="url" 
                name="url" 
                class="settings-input" 
                style="width: 100%; max-width: 600px;" 
                placeholder="https://open.spotify.com/playlist/..." 
                required
            >
        </div>
        
        <div class="form-group" style="margin-bottom: 16px;">
            <label style="display: block; margin-bottom: 6px; font-size: 13px; color: var(--text-secondary);">Custom Name (optional)</label>
            <input 
                type="text" 
                name="name" 
                class="settings-input" 
                style="width: 100%; max-width: 400px;" 
                placeholder="Leave blank to use playlist name from source"
            >
        </div>
        
        <div style="display: flex; gap: 24px; flex-wrap: wrap; margin-bottom: 16px;">
            <div class="form-group" style="min-width: 180px;">
                <label style="display: block; margin-bottom: 6px; font-size: 13px; color: var(--text-secondary);">Sync Mode</label>
                <select name="sync_mode" class="settings-input" style="width: 100%;">
                    <option value="append">Append (keep old tracks)</option>
                    <option value="mirror">Mirror (sync with source)</option>
                </select>
            </div>
            
            <div class="form-group" style="min-width: 180px;">
                <label style="display: block; margin-bottom: 6px; font-size: 13px; color: var(--text-secondary);">Refresh Interval</label>
                <select name="refresh_interval" class="settings-input" style="width: 100%;">
                    <option value="6">Every 6 hours</option>
                    <option value="12">Every 12 hours</option>
                    <option value="24" selected>Daily (24 hours)</option>
                    <option value="168">Weekly</option>
                </select>
            </div>
        </div>
        
        <div class="form-group" style="margin-bottom: 20px;">
            <label style="display: flex; align-items: center; gap: 10px; font-size: 14px; cursor: pointer;">
                <input type="checkbox" name="make_m3u" checked style="width: 18px; height: 18px;">
                <span>Generate M3U playlist file</span>
            </label>
            <p style="margin: 6px 0 0 28px; font-size: 12px; color: var(--text-muted);">Creates a .m3u file in music/Playlists/ that updates as tracks are downloaded</p>
        </div>
        
        <button type="submit" class="btn btn-primary" style="padding: 10px 20px;">
            Add & Start Watching
        </button>
        <span id="add-spinner" class="htmx-indicator" style="margin-left: 12px;">‚è≥</span>
    </form>
    
    <div id="add-result" style="margin-top: 16px;"></div>
</div>

<div class="settings-section">
    <div class="settings-section-title" style="display: flex; justify-content: space-between; align-items: center;">
        <span>Watched Playlists</span>
        {% if due_for_refresh > 0 %}
        <button 
            class="btn btn-small"
            hx-post="/watched/refresh-all"
            hx-target="#playlist-list"
            hx-indicator="#refresh-all-spinner"
        >
            üîÑ Refresh {{ due_for_refresh }} Due
            <span id="refresh-all-spinner" class="htmx-indicator">‚è≥</span>
        </button>
        {% endif %}
    </div>
    
    <div id="playlist-list">
        {% include 'watched/_playlist_list.twig' %}
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
function showToast(message, isError = false) {
    const toast = document.getElementById('toast');
    toast.textContent = message;
    toast.className = 'toast show' + (isError ? ' error' : '');
    setTimeout(() => toast.className = 'toast', 3000);
}
</script>
{% endblock %}
